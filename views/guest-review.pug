include includes/utils.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png")
    link(rel="manifest" href="/images/favicon/site.webmanifest")
    title AirCnC -Guest Review
  body
    .guest-review
      div.errors-container
      form(class="guest-review-form")
        label(for="starRating") Star Rating
        select(id="starRating" class="guest-review-form__starRating" name="starRating" required)
          option(value=1) 1
          option(value=2) 2
          option(value=3) 3
          option(value=4) 4
          option(value=5) 5
        +createInput("checkbox", "wouldHostAgain", "guest-review-form__wouldHostAgain", "wouldHostAgain", "Would Host Again?", false, false)
        +createInput("text", "comment", "guest-review-form__comment", "comment", "Comments", false, true)
        button(type="submit") Submit
    script
      include ../public/scripts/utils.js
    script(src="/scripts/guest-review.js")
