include includes/utils.pug

html(lang="en" prefix="og: http://ogp.me/ns#")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        meta(property='og:title' content='Air CnC')
        meta(property='og:image' content='images/rsz_aircnc-pic.png')
        meta(property='og:description' content='A site to rent brilliant kitchens')
        meta(property='og:url' content='http://www.aircnc.us/')
        link(rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png")
        link(rel="manifest" href="/images/favicon/site.webmanifest")
        link(rel="api" href=`${api}`)
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
        <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>

        style
            include ../public/stylesheets/ProfileStyle/styles/style.css
        title AirCnC - Profile
    body
        include includes/guest-navbar.pug
        h1 Your Bookings
        div.bookings
            div.bookings-top-half
                div.pastBookings
                div.currentBookings
            div.bookings-bottom-half
                div(class="guest-review__profile-page mdl-card mdl-shadow--4dp")
                    div.kitchen-review
                        div.kitchen-review-label Review a Kitchen
                        div.errors-container
                        form.kitchen-review-form
                            form(class="kitchen-review-form")
                                div(class="review-selector-container guest-review__form-elements")
                                    label(for="reviewSelector") Booking
                                    select(id="reviewSelector" class="kitchen-review-form__reviewSelector" name="reviewSelector" required)
                                div(class="star-and-clean-container guest-review__form-elements")
                                    div.start-rating-container
                                        label(for="starRating") Star Rating
                                        select(id="starRating" class="kitchen-review-form__starRating" name="starRating" required)
                                            option(value=1) 1
                                            option(value=2) 2
                                            option(value=3) 3
                                            option(value=4) 4
                                            option(value=5) 5
                                    div.clean-rating-container
                                        label(for="cleanRating") Cleanliness Rating
                                        select(id="cleanRating" class="kitchen-review-form__cleanRating" name="cleanRating" required)
                                            option(value=1) 1
                                            option(value=2) 2
                                            option(value=3) 3
                                            option(value=4) 4
                                            option(value=5) 5
                                div(class="feature-and-would-container guest-review__form-elements")
                                    div.feature-bool-container
                                        +createInput("checkbox", "featureBool", "kitchen-review-form__featureBool", "featureBool", "As Described", false, false)
                                    div.wouldRentAgain-container
                                        +createInput("checkbox", "wouldRentAgain", "kitchen-review-form__wouldRentAgain", "wouldRentAgain", "Would Rent Again", false, false)
                                div(class="comment-container guest-review__form-elements")
                                    +createInput("text", "comment", "comment", "kitchen-review-form__comment", "Comments",  true, true)
                                div.submit-button-container
                                    button(type="submit") Submit
    script(type="module" src="/scripts/profile.js")
